{% extends ':artist:layout.html.twig' %}

{% block title %}{{ page_header }}{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% include '::alert.html.twig'%}
            <div class="block-flat">
                <div class="content">
                    {% include "artist/form/_create.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}



{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/js/jquery.select2/select2.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/js/bootstrap.wysihtml5/dist/bootstrap3-wysihtml5.min.css') }}"/>
{% endblock stylesheets %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/bootstrap.wysihtml5/dist/bootstrap3-wysihtml5.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.wysihtml5/dist/bootstrap3-wysihtml5.all.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.parsley/dist/parsley.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.select2/select2.min.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $("#artist_create_isBand").click("click", function () {
                if ($("#artist_create_isBand").is(":checked")) {
                    $(".soloAct").each(function(index){
                        $(this).parent().parent().hide();
                    });
                } else {
                    $(".soloAct").each(function(index){
                        $(this).parent().parent().show();
                    });
                }
            });
            $(".select2").select2({
                width: '100%'
            });

            $('#artist_create_bio').wysihtml5();
        });
    </script>
{% endblock javascripts %}
