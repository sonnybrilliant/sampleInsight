{% extends ':promo:layout.html.twig' %}

{% block title %}{{ page_header }}{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% include '::alert.html.twig'%}
            <div class="block-flat">
                <div class="content">
                    {% include "promo/form/_create.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/js/jquery.select2/select2.css') }}"/>
    <link rel="stylesheet"type="text/css" href="{{ asset('/assets/js/bootstrap.datetimepicker/js/bootstrap-datetimepicker.js') }}" />

{% endblock stylesheets %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/bootstrap.datepicker-1.4.0/js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.parsley/dist/parsley.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.select2/select2.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".hide-show").each(function(index){
                $(this).parent().parent().hide();
            });

            $("#promo_create_isRadioPromo").click("click", function () {
                if ($("#promo_create_isRadioPromo").is(":checked")) {
                    $(".hide-show").each(function(index){
                        $(this).parent().parent().show();
                    });
                } else {
                    $(".hide-show").each(function(index){
                        $(this).parent().parent().hide();
                    });
                }
            });
            $(".select2").select2({
                width: '100%'
            });
        });
    </script>
{% endblock javascripts %}