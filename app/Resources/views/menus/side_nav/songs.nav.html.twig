{% if is_granted('ROLE_SONG_VIEW') %}
<li>
    <a href="#"><i class="fa fa-music"></i><span>Songs</span></a>
    <ul class="sub-menu" {% if action == 'song_profile' or action == 'song_edit' %} style="display: block;"{% endif %}>
        {% if is_granted('ROLE_SONG_EDIT') %}
        <li {% if action == 'song_add' %}class="active" {% endif %}><a href="{{ path('song_add') }}"><i class="fa fa-plus-circle"></i><span>Add song</span></a></li>
        {% endif %}

        {% if is_granted('ROLE_SONG_VIEW') %}
        <li {% if action == 'song_list' %} class="active" {% endif %}><a href="{{ path('song_list') }}"><i class="fa fa-list"></i><span>List songs</span></a></li>
        {% endif %}

        {% if action == 'song_profile' %}
        <li class="active"><a href="{{ path('song_profile',{slug:song.slug}) }}"><i class="fa fa-eye"></i><span>Profile</span></a></li>
        {% endif %}

    </ul>
</li>
{% endif %}