{% extends ':radio_station:layout.html.twig' %}


{% block title %}{{ page_header }}{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% include '::alert.html.twig'%}
            <div class="block-flat">
                <div class="content">
                    {% include "radio_station/form/_view_reject.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/js/bootstrap.wysihtml5/dist/bootstrap3-wysihtml5.css') }} "/>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/js/jquery.select2/select2.css') }}"/>

{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/jquery.select2/select2.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/bootstrap.wysihtml5/dist/bootstrap3-wysihtml5.all.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.textarea').wysihtml5();

            $(".select2").select2({
                width: '100%'
            });
        });
    </script>
{% endblock javascripts %}

